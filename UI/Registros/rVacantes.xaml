<Window x:Class="ProyectoFinal_ContratacionEmpleados.UI.Registros.rVacantes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFinal_ContratacionEmpleados.UI.Registros"
        mc:Ignorable="d"
        Title="Registro de Vacantes" Height="599" Width="349" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <StackPanel Orientation="Vertical">
                <Label Content="Vacante id:" />
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="VacanteId_TextBox" Width="100" Height="18" Margin="5,0,0,0" Text="{Binding VacanteId}"/>
                    <Button x:Name="Buscar_Button" Margin="5,0" Click="Buscar_Button_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/search-icon (3).png" />
                            <Label Content="Buscar"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>

            <Label Content="Nombre:"/>
            <TextBox x:Name="NombreVacante_TextBox" Width="300" HorizontalAlignment="Left" Margin="5,0,0,0" Text="{Binding NombreDeVacante}"/>
            <Label Content="Fecha de registro:"/>
            <DatePicker x:Name="Fecha_DatePicker" SelectedDate="{Binding FechaDeRegistroVacante}" SelectedDateFormat="Short" Width="150" HorizontalAlignment="Left" Margin="5,0,0,0"/>

            <Label Content="Departamento:"/>
            <ComboBox x:Name="DepartamentoComboBox" SelectedValue="{Binding DepartamentoId}" Width="300" HorizontalAlignment="Left"/>
            <Label Content="Requisitos:"/>
            <TextBox x:Name="Requisitos_TextBox" AcceptsReturn="True" TextWrapping="Wrap" Width="300" HorizontalAlignment="Left" Margin="5,0,0,0" Text="{Binding RequisitosVacante}" Height="137"/>
            <Label Content="Descripcion:"/>
            <TextBox x:Name="Descripcion_TextBox" AcceptsReturn="True" TextWrapping="Wrap" Width="300" HorizontalAlignment="Left" Margin="5,0,0,0" Text="{Binding DescripcionVacante}" Height="76"/>

            <StackPanel Orientation="Horizontal" Margin="0,20">
                <Button x:Name="Nuevo_Button" Click="Nuevo_Button_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Files-New-File-icon.png" />
                        <Label Content="Nuevo"/>
                    </StackPanel>
                </Button>

                <Button x:Name="Guardar_Button" Click="Guardar_Button_Click"  Margin="35,0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/floppy-icon.png" />
                        <Label Content="Guardar"/>
                    </StackPanel>
                </Button>

                <Button x:Name="Eliminar_Button" Click="Eliminar_Button_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/symbol-delete-icon.png" />
                        <Label Content="Eliminar"/>
                    </StackPanel>
                </Button>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
